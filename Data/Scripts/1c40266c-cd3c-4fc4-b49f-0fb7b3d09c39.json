                            "text": "Examine the Writing",
                            "nodes": [
                                {
                                    "type": "nodes.changeTags",
                                    "id": "96734d9e-b8ea-4aca-a2ca-2fb3bc12e4ea",
                                    "scope": "scene",
                                    "scopeId": "96b992a1-3aa3-46ba-9505-08622406706c",
