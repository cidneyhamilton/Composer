    "entryPoints": [
        {
            "type": "scripts.entryPoint",
            "id": "e7126d9e-243e-4221-894f-cc605290a5e6",
            "name": "Main",
            "nodes": [
                {
                    "type": "nodes.showMenu",
                    "id": "cbbf2680-ae4a-44f5-8947-27603c4f5e16",
                    "options": [
                        {
                            "type": "options.text",
                            "id": "46f8bf78-fa5d-42d8-be8b-dc95e5f04083",
                            "text": "Look at the Portrait",
                            "nodes": [
                                {
                                    "type": "nodes.branch",
                                    "sections": [
                                        {
                                            "type": "nodes.branchSection",
                                            "expression": {
                                                "type": "expressions.inTags",
                                                "scope": "actor",
                                                "scopeId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                "scopeFilterId": null,
                                                "tags": "GOT_LIGHT",
                                                "has": true
                                            },
                                            "nodes": [
                                                {
                                                    "type": "nodes.showCloseUp",
                                                    "imageName": "PatrickRatanaFramed.png"
                                                },
                                                {
                                                    "type": "nodes.changeTags",
                                                    "id": "0dc1a314-1c86-438a-8240-03dadaaf42ef",
                                                    "scope": "prop",
                                                    "scopeId": "9cd3793b-19dc-4444-95ef-d348b37a3bda",
                                                    "scopeFilterId": "298ff758-e1ce-477a-b9d4-da614b74072d",
                                                    "tagsToAdd": "SawPainting",
                                                    "tagsToRemove": null
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "1bf5ce9b-897f-4202-a9f3-f09cfce0733c",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": null,
                                                    "text": "The plaque reads, \"Patrick Ratana, Hero of the War of the Chaos Gate.\nHis last words: 'Alas, Emily, I never gave you a rose...'\"",
                                                    "emotion": "0",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.branch",
                                                    "sections": [
                                                        {
                                                            "type": "nodes.branchSection",
                                                            "expression": {
                                                                "type": "expressions.hasActiveQuest",
                                                                "propId": "d446df63-7edf-4c75-920a-f75fa60781f5",
                                                                "sceneId": "e8520824-d970-4c6e-8aec-6c308c8846ab",
                                                                "questStatus": "1"
                                                            },
                                                            "nodes": [
                                                                {
                                                                    "type": "nodes.speak",
                                                                    "id": "a97945c5-9a5b-4cf2-95bd-b36795bf74ec",
                                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                    "text": "Well, those <b>were</b> his last words while still alive. Thanks to one Shawn O'Conner, Emily's tomb has a rose now. Patrick's and Emily's ghosts have found their peace at last.",
                                                                    "emotion": "1",
                                                                    "emotion2": "0",
                                                                    "device": "0",
                                                                    "device2": "0"
                                                                }
                                                            ]
                                                        },
                                                        {
                                                            "type": "nodes.branchSection",
                                                            "expression": {
                                                                "type": "expressions.hasActiveQuest",
                                                                "propId": "d446df63-7edf-4c75-920a-f75fa60781f5",
                                                                "sceneId": "e8520824-d970-4c6e-8aec-6c308c8846ab",
                                                                "questStatus": "0"
                                                            },
                                                            "nodes": [
                                                                {
                                                                    "type": "nodes.speak",
                                                                    "id": "594de790-8e82-4eab-baad-8c3c67e7a99f",
                                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                    "text": "Now it's up to me. I might not be able to change Patrick's expression on this painting, but I can help two ghosts find their final peace.",
                                                                    "emotion": "0",
                                                                    "emotion2": "0",
                                                                    "device": "0",
                                                                    "device2": "0"
                                                                }
                                                            ]
                                                        },
                                                        {
                                                            "type": "nodes.branchSection",
                                                            "expression": {
                                                                "type": "expressions.hasActiveQuest",
                                                                "propId": "d446df63-7edf-4c75-920a-f75fa60781f5",
                                                                "sceneId": "e8520824-d970-4c6e-8aec-6c308c8846ab",
                                                                "questStatus": "2"
                                                            },
                                                            "nodes": [
                                                                {
                                                                    "type": "nodes.speak",
                                                                    "id": "abbfde5a-4ebe-4831-9195-e0a55076bf9d",
                                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                    "text": "I know why they're sad, but it's too late to help them now. Oh well, making ghosts happy isn't exactly in a Rogue's job description.",
                                                                    "emotion": "0",
                                                                    "emotion2": "0",
                                                                    "device": "0",
                                                                    "device2": "0"
                                                                }
                                                            ]
                                                        },
                                                        {
                                                            "type": "nodes.branchSection",
                                                            "expression": null,
                                                            "nodes": [
                                                                {
                                                                    "type": "nodes.speak",
                                                                    "id": "6fd53872-6c0f-4933-a431-067043f94e54",
                                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                    "actorId2": null,
                                                                    "text": "He looks so sad. Was it unrequited love? Or was he simply regretting a lost opportunity to tell someone he loved her? Either way... I know the feeling.",
                                                                    "emotion": "0",
                                                                    "emotion2": "0",
                                                                    "device": "0",
                                                                    "device2": "0"
                                                                },
                                                                {
                                                                    "type": "nodes.speak",
                                                                    "id": "9fb84679-6a0d-4a96-bb93-4a59399e1b22",
                                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                    "actorId2": null,
                                                                    "text": "So often we lose people before we tell them how we feel about them. And then, when it's too late, there's this sense of emptiness and... and desolation...",
                                                                    "emotion": "0",
                                                                    "emotion2": "0",
                                                                    "device": "0",
                                                                    "device2": "0"
                                                                },
                                                                {
                                                                    "type": "nodes.speak",
                                                                    "id": "f69f747f-64de-4f94-b4d0-d82553708fa5",
                                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                    "actorId2": null,
                                                                    "text": "Now I'm depressed. ",
                                                                    "emotion": "0",
                                                                    "emotion2": "0",
                                                                    "device": "0",
                                                                    "device2": "0"
                                                                }
                                                            ]
                                                        }
                                                    ]
                                                },
                                                {
                                                    "type": "nodes.hideCloseUp",
                                                    "waitForSeconds": 1
                                                }
                                            ]
                                        },
                                        {
                                            "type": "nodes.branchSection",
                                            "expression": null,
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "ff849e22-cb31-4b85-a461-4e5b5c336298",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": null,
                                                    "text": "I see a face... so melancholy... but I can't see much more than that.",
                                                    "emotion": "0",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": true,
                            "minutes": "1",
                            "ExitMenu": false
                        },
                        {
