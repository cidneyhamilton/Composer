                                        },
                                        {
                                            "type": "options.text",
                                            "id": "da7fe7e6-e275-447e-974d-876f459c62c5",
                                            "text": "Take a Snarky Guess",
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "3bc3ad87-a140-4c5d-a0e6-7e60b7f0b8ee",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "text": "We flutter around aimlessly while we go batty trying to figure out what answer you are looking for?",
                                                    "emotion": "1",
                                                    "emotion2": "3",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "id": "0d70e152-454b-4c37-b58d-12fd51fc03dc",
