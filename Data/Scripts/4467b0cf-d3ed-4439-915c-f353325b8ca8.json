                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "3a98bcfe-bb4d-49c7-bc2b-54227ddf3155",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "d790a30c-ba0a-45af-94dc-c5066fcb20a4",
                                    "text": "<yawn> Well, good night for now.",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "bb1a6784-8d50-49c4-8df2-2ba59562dba9",
