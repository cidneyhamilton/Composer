                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "05e3a1ae-245b-48e0-a45f-25503a991828",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": null,
                                    "text": "It's just as well it isn't magical because I wouldn't want this statue to come to life and get all righteous hero in my face.",
