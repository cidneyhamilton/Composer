                                {
                                    "type": "nodes.setVariable",
                                    "name": "SophiaClassmatesRumor",
                                    "scope": "scene",
                                    "sceneId": "a2508b7e-a177-4a96-93bd-4d8ab88dffc4",
                                    "source": {
                                        "type": "variables.literal",
                                        "value": "1",
                                        "displayName": "Literal"
                                    },
                                    "add": true
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "d5e41e86-40b8-4baa-b32e-93b54c300d89",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                    "text": "There's Katie MacMichael...",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.fade",
                                    "scope": "FadeOutAndIn",
                                    "fadeTime": 0.5,
                                    "fadeTime2": 2,
                                    "wait": true,
                                    "fadeDown": 0.5,
                                    "fadeColorR": 0,
                                    "fadeColorG": 0,
                                    "fadeColorB": 0
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "f5e1abaa-dc56-4aa3-a66d-951d67ca8afd",
                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "The daughter of an Innkeeper and a sea captain... Well, there are rumors in town that MacMichael's father turned to piracy years ago. Katie is definitely her father's daughter.",
                                    "emotion": "0",
                                    "emotion2": "4",
                                    "device": "0",
                                    "device2": "0"
                                }
                            ],
                            "expression": {
                                "type": "expressions.inTags",
                                "scope": "actor",
                                "scopeId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                "scopeFilterId": null,
                                "tags": "SophiaRumorsKatie",
                                "has": false
                            },
                            "ignoreChildAvailability": false,
                            "minutes": "10",
                            "ExitMenu": true
                        },
                        {
                            "type": "options.text",
