                                    "add": true
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "dcf7af54-7a01-4f7f-98d6-238fe93090fd",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                    "text": "One of my classmates is Joel Kyro...",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.fade",
                                    "scope": "FadeOutAndIn",
                                    "fadeTime": "0.25",
                                    "fadeTime2": "0.25",
                                    "wait": true,
                                    "fadeDown": "0.5",
                                    "fadeColorR": 0,
                                    "fadeColorG": 0,
                                    "fadeColorB": 0
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "a1051c58-2572-49d3-a37b-6427adc4eac9",
                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Ugh... that weasel. Running a black market right in the halls of this school and no one stops him! His father was a known criminal in Silmaria. I don't know why they let him into this school.",
                                    "emotion": "0",
                                    "emotion2": "4",
                                    "device": "0",
                                    "device2": "0"
                                }
                            ],
                            "expression": {
                                "type": "expressions.and",
