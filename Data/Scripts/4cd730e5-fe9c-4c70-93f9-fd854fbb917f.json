                            "id": "899e3bd6-8147-4549-a5e8-a23d5a4837dc",
                            "text": "Talk About Katie",
                            "nodes": [
                                {
                                    "type": "nodes.changeTags",
                                    "id": "7692be80-8b02-480c-bd8c-fc5a41fe98f2",
                                    "scope": "actor",
                                    "scopeId": "6378f038-f4cd-49aa-8357-dcb46a978684",
