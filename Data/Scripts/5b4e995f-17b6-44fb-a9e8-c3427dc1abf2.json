                    "options": [
                        {
                            "type": "options.text",
                            "id": "76bdae0b-a581-4c3b-824d-93bfcf22bea7",
                            "text": "Ask About Sophia",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "c0d36eb2-9fb6-4335-83ee-d2314811520a",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                    "text": "How are things going for you?",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "7bbc21c1-d96e-4c18-9133-5c41a9b12cfe",
                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Fine and dandy, same as always, Sweetie. Thanks for asking.",
                                    "emotion": "1",
                                    "emotion2": "1",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.changeReputation",
                                    "id": "feb17f31-1d53-42df-b263-148c39565e6f",
                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
