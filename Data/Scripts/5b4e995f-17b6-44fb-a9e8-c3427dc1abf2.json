                            "minutes": "2",
                            "ExitMenu": false
                        },
                        {
                            "type": "options.text",
                            "id": "1e99e5ab-ba55-4191-913b-a39f4865fec1",
                            "text": "Talk About Kyro",
                            "nodes": [
                                {
                                    "type": "nodes.branch",
                                    "sections": [
                                        {
                                            "type": "nodes.branchSection",
                                            "expression": {
                                                "type": "expressions.inTags",
                                                "scope": "actor",
                                                "scopeId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                "scopeFilterId": null,
                                                "tags": "KyroSaved",
                                                "has": true
                                            },
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "e1d5cf1f-dcd7-4ed2-9620-5e80e3710440",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                                    "text": "Maybe I really do belong at a school for Heroes?",
                                                    "emotion": "1",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "d847ee00-643e-4ad8-990d-f7f16acd2ba3",
                                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "Maybe so... but next time you risk your life for someone, make sure he's worth saving.",
                                                    "emotion": "1",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.changeReputation",
                                                    "id": "f7efec34-5f4e-4d56-b4d0-e1d679e0bbb4",
                                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                                    "amount": "2",
                                                    "change": "1",
                                                    "notify": true
                                                }
                                            ]
                                        },
                                        {
                                            "type": "nodes.branchSection",
                                            "expression": null,
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "0f07a3ee-2e4a-49c4-8efe-0fc79ccb9227",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                                    "text": "Joel really didn't deserve to die like that.",
                                                    "emotion": "3",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "25508662-fa50-4fd5-998c-afe06c2cfbc9",
                                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "Death happens to those who are in the wrong place at the wrong time. Face it - the weasel staked his life and lost. It's nobody's fault but his own.",
                                                    "emotion": "0",
                                                    "emotion2": "2",
                                                    "device": "0",
                                                    "device2": "0"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": false,
                            "minutes": "3",
                            "ExitMenu": false
                        },
                        {
                            "type": "options.text",
                            "id": "d7aa682c-ad66-4969-86ae-40b9a5207321",
                            "text": "Ask About Rumors",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "88893d98-9b86-4a47-a0a9-afe5f88503c7",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                    "text": "So what's new around here?",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.changeReputation",
                                    "id": "1821d031-9a93-416e-a00d-8bb01afe5e0b",
                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                    "amount": "2",
                                    "change": "1",
                                    "notify": true
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "b76eee25-ba65-44b9-a9da-2d891b0edcc5",
                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Fill me in on the details of Kyro and I'll tell you what I heard about it.",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.fade",
                                    "scope": "FadeOutAndIn",
                                    "fadeTime": 0.5,
                                    "fadeTime2": 2,
                                    "wait": true,
                                    "fadeDown": 0.5,
                                    "fadeColorR": 0,
                                    "fadeColorG": 0,
                                    "fadeColorB": 0
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "1c99cc54-487d-453d-a2f1-be1fcab4be03",
                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Hmmm... interesting...",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "abf87ce4-4aa5-4392-8176-52b0d8e26c13",
                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "There was a staff meeting about the missing weasel. The Headmaster was very upset - he was concerned about the bad publicity if people found out that the school had lost a student.",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "3977d57b-e0d9-41d7-af3d-6721bb117098",
                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "The Professor used magic to tell that he wasn't lost within the walls of the castle. Master von Stuck-up said that he had checked out part of the catacombs and consulted with the local Thief Guild fence. ",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "5444d814-a808-4d0c-9285-1881f92f386e",
                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "All the instructors tried frantically to find Kyro before his death stained the reputation of this Hero University.",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.branch",
                                    "sections": [
                                        {
                                            "type": "nodes.branchSection",
                                            "expression": {
                                                "type": "expressions.inTags",
                                                "scope": "actor",
                                                "scopeId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                "scopeFilterId": null,
                                                "tags": "KyroSaved",
                                                "has": true
                                            },
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "c04eda04-915a-4afb-810b-1f8c212665c5",
                                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "And then, you saved the rat when no one else could. Nice going.",
                                                    "emotion": "1",
                                                    "emotion2": "1",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "e9ee0ce2-5354-4840-95a7-50e7f4dac0f3",
                                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "I'd keep that in mind if you ever get into serious danger around here - don't expect anyone else to rescue you.",
                                                    "emotion": "1",
                                                    "emotion2": "4",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.changeReputation",
                                                    "id": "077c8278-66e9-43bd-a198-04cbd0b1aa4d",
                                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                                    "amount": "2",
                                                    "change": "1",
                                                    "notify": true
                                                }
                                            ]
                                        },
                                        {
                                            "type": "nodes.branchSection",
                                            "expression": null,
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "884bf6ab-0afe-480e-84e5-01b68ef5eecd",
                                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "So pretty boy Thomas found the remains of the weasel... From what I've seen, he's probably beating himself that he didn't try hard enough to save Kyro.",
                                                    "emotion": "0",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "2297553a-e9f3-4cd9-8163-0750d2e3945e",
                                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "That's a Paladin for you - no matter how hard they try, they can never be good enough to match their own ideals. And Thomas is a Paladin's scion, no doubt of that.",
                                                    "emotion": "1",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": false,
                            "minutes": "15",
                            "ExitMenu": false
                        },
                        {
                            "type": "options.text",
                            "id": "e72d12f0-93cd-4457-8152-605de9547ad2",
                            "text": "Say Goodbye",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "71c443d5-ebc0-4f23-9aff-dcad2fdcd6d1",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                    "text": "See you later!",
                                    "emotion": "1",
                                    "emotion2": "1",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "cc9f729c-f3bd-4d3f-a077-50b076381cbe",
                                    "actorId": "6378f038-f4cd-49aa-8357-dcb46a978684",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "I look forward to our little chats, Cutie, so come back soon.",
                                    "emotion": "1",
                                    "emotion2": "1",
                                    "device": "0",
                                    "device2": "0"
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": true,
                            "minutes": "2",
                            "ExitMenu": true
                        }
                    ],
                    "AutoAddDone": false,
                    "Unique": false
                }
            ]
        }
    ]
