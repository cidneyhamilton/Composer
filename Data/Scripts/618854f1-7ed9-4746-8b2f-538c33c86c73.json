                                        {
                                            "type": "options.text",
                                            "id": "f19e4008-c519-4e0c-ad12-2fdcc1cea99a",
                                            "text": "Say No",
                                            "nodes": [
                                                {
                                                    "type": "nodes.changeTags",
                                                    "id": "db5c1349-4906-462a-9932-e6aa97159ba7",
                                                    "scope": "scene",
