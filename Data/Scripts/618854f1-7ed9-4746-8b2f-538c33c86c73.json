                                        },
                                        {
                                            "type": "options.text",
                                            "id": "0857495b-2377-4e6e-9420-6850919480e0",
                                            "text": "Say Something Snarky",
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "1a417963-c2ec-4fa5-82dc-d82189b2c680",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": null,
                                                    "text": "So does this spooky talk mean I am making a 'grave' error - or does it only ghost to show that I am Wight?",
                                                    "emotion": "1",
                                                    "emotion2": "0",
                                                    "device": "0",
