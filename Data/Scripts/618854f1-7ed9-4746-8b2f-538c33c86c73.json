                                                    "tagsToRemove": null
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "fd2dfe31-9624-482f-a7b1-36ddc8ae847b",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "a0b548d6-b820-451f-9508-8fc7fcf166bd",
                                                    "text": "It seems like talking to ghosts is risky, painful, and not very useful. No, thank you.",
                                                    "emotion": "0",
                                                    "emotion2": "4",
                                                    "device": "0",
                                                    "device2": "0",
