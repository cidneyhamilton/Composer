    "entryPoints": [
        {
            "type": "scripts.entryPoint",
            "id": "90963d02-1572-4e9e-8082-a49fa786e3b6",
            "name": "Main",
            "nodes": [
                {
                    "type": "nodes.showMenu",
                    "id": "d58112b9-9528-4440-bd35-1acf6d2e8055",
                    "options": [
                        {
                            "type": "options.text",
                            "id": "3cb47ffb-b69f-4824-bfb5-de8b8cc56347",
                            "text": "Ask About Gregor",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "a1ba3115-2eaa-4c90-a0ed-556b54178236",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "text": "What's new with you, Gregor?",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "471efe98-5a9b-4d6f-a3b3-d793d228fe2e",
                                    "actorId": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Gregor is all excited - magical things for sale in store, just what the Young Master needs!",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.changeReputation",
                                    "id": "891d9d4b-e28c-403e-aa94-58c20a287900",
                                    "actorId": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "amount": "2",
                                    "change": "1",
                                    "notify": true
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": false,
                            "minutes": "2",
                            "ExitMenu": false
                        },
                        {
                            "type": "options.text",
                            "id": "579e25ab-09f2-45d7-a80c-c77f28c1b2bc",
                            "text": "Ask About the Store",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "cfd016b0-e4b0-48d5-9038-490960955d57",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "text": "So what do you have that's new for me today?",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "427dbba3-052c-476d-bd79-b79f8d6f7266",
                                    "actorId": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Magic! Gregor has magical Runestones for sale! Now Master Shawn can use magic like Gregor. The Young Master can be magical!",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.branch",
                                    "sections": [
                                        {
                                            "type": "nodes.branchSection",
                                            "expression": {
                                                "type": "expressions.inTags",
                                                "scope": "actor",
                                                "scopeId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                "scopeFilterId": null,
                                                "tags": "hadMagic1",
                                                "has": true
                                            },
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "871dcc0d-3fb4-4653-9f49-102a2be7de1b",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                                    "text": "I learned all about runestones in Magic Class.",
                                                    "emotion": "1",
                                                    "emotion2": "4",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "08f10542-6362-420d-81bf-4f0b0b08de2e",
                                                    "actorId": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "Master Shawn is Wizard? Gregor is very impressed! Gregor loves magic.",
                                                    "emotion": "1",
                                                    "emotion2": "1",
                                                    "device": "0",
                                                    "device2": "0"
                                                }
                                            ]
                                        },
                                        {
                                            "type": "nodes.branchSection",
                                            "expression": null,
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "54739cda-f1aa-4a1f-abd2-424a15b63698",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                                    "text": "What are Runestones?",
                                                    "emotion": "0",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "96076851-af94-4e4a-ab1a-f3e4e3644e84",
                                                    "actorId": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "Runestones are clay stones with magical runes on them. The runes are spells. Each rune does a different sort of magic. Runestones are used like traps, set off when nasty Undead monsters come near them.",
                                                    "emotion": "0",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                }
                                            ]
                                        }
                                    ]
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "1c123793-8118-4393-9f86-b4879f5b280f",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "text": "What sort of Runestones are you talking about?",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "e139affb-6822-4092-995b-a6ce1e65ce85",
                                    "actorId": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Gregor has Sol and Null runestones! Sol runestones send out a flash of sunlight to hurt Undead like ghosties. Null runestones stops magical spells - magic and dead things cannot cross over the Null Rune.",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "6300b9ad-e317-4205-9522-00d42c0a54c8",
                                    "actorId": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Gregor also has bottle of Eau d'Enchant. Use this on your weapon, and it will turn a normal weapon into a magical one for an hour or so. That way, Master Shawn can defend himself against the Undead.",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": false,
                            "minutes": "12",
                            "ExitMenu": false
                        },
                        {
                            "type": "options.text",
                            "id": "54e3a24e-6b55-440e-b934-921059eae778",
                            "text": "Ask About Ratties",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "4283b607-aebc-4720-a52a-aba313f40609",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "text": "So do Ratties use magic?",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "88c2c43b-0e8a-42c8-b5d8-c8a28395e87a",
                                    "actorId": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Most Ratties do not like magic. Magic is not normal and predictable. Ratties like things to be same-same all the time.",
                                    "emotion": "2",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "0dee2e83-a9b2-4d37-ac01-33637e31981e",
                                    "actorId": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Gregor is not like most Ratties. Gregor loves magic. Gregor loves things that change and grow. ",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "55c7718c-830f-4ffd-9f27-d6e372406b3e",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "text": "So Gregor is special?",
                                    "emotion": "1",
                                    "emotion2": "1",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "e78fae38-163b-4056-9df5-f1eb5d44dc34",
                                    "actorId": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Yes! Gregor is special. Gregor is Gregor!",
                                    "emotion": "1",
                                    "emotion2": "1",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.changeReputation",
                                    "id": "b5ec8b8b-64b0-4fa7-aad0-2f407962a66e",
                                    "actorId": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "amount": "2",
                                    "change": "1",
                                    "notify": true
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": false,
                            "minutes": "6",
                            "ExitMenu": false
                        },
                        {
                            "type": "options.text",
                            "id": "867f77e0-51f9-4480-ae8c-47451cf4fc28",
                            "text": "Ask About Kyro",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "687fe074-dbe1-47c4-9564-565417cacd69",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "text": "I don't suppose you've seen Joel Kyro around lately?",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "b09d06c6-2043-4565-8002-30a5fab4c354",
                                    "actorId": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Gregor is sorry to admit that Gregor knows nothing about Master Kyro. Master Kyro never comes around here to speak with Gregor or buy things.",
                                    "emotion": "2",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                }
                            ],
                            "expression": {
                                "type": "expressions.and",
                                "left": {
                                    "type": "expressions.inTags",
                                    "scope": "actor",
                                    "scopeId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "scopeFilterId": null,
                                    "tags": "KyroSaved",
                                    "has": false
                                },
                                "right": {
                                    "type": "expressions.inTags",
                                    "scope": "actor",
                                    "scopeId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "scopeFilterId": null,
                                    "tags": "KyroDead",
                                    "has": false
                                }
                            },
                            "ignoreChildAvailability": false,
                            "minutes": "3",
                            "ExitMenu": true
                        },
                        {
                            "type": "options.text",
                            "id": "eb9e694d-df66-40c7-8b37-d9e9670a680d",
                            "text": "Say Goodbye",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "f985b83a-e807-4c4d-9018-f60564fd0e67",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "text": "Talk to you later!",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "8ac5ea57-ea60-4271-a39e-20f2ef899de7",
                                    "actorId": "00707f50-1f0d-4c1c-98b3-a2780d28cf0e",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Gregor will always be happy when Master Shawn talks to Gregor. Be safe!",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": true,
                            "minutes": "2",
                            "ExitMenu": true
                        }
                    ],
