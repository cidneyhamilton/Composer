    "id": "63a8774c-9a45-4012-8267-6169ae6d97e6",
    "name": "RCC17 Joel Castle Secrets",
    "sceneId": "3256b6d8-50b9-4764-b016-01ea538ea55f",
    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
    "trigger": {
        "type": "triggers.manual",
        "name": "Manual"
    },
    "entryPoints": [
        {
            "type": "scripts.entryPoint",
            "id": "e0143934-daa3-404e-a874-d4dd52a84809",
            "name": "Main",
            "nodes": [
                {
                    "type": "nodes.showMenu",
                    "id": "cc8b02f6-1899-4539-89fe-9a7f2eecb81f",
                    "options": [
                        {
                            "type": "options.text",
                            "id": "4ef77c32-aed7-4b59-b1de-bad2874b8d9e",
                            "text": "Ask About Joel",
                            "nodes": [
                                {
                                    "type": "nodes.branch",
                                    "sections": [
                                        {
                                            "type": "nodes.branchSection",
                                            "expression": {
                                                "type": "expressions.inTags",
                                                "scope": "actor",
                                                "scopeId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                "scopeFilterId": null,
                                                "tags": "RCCJCS17",
                                                "has": false
                                            },
                                            "nodes": [
                                                {
                                                    "type": "nodes.changeTags",
                                                    "id": "7357edad-c942-415f-9b8c-abfe969bf80e",
                                                    "scope": "target",
                                                    "scopeId": null,
                                                    "scopeFilterId": null,
                                                    "tagsToAdd": "RCCJCS17",
                                                    "tagsToRemove": null
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "a20e44cb-39c7-4cdc-9fea-c5697cc4bae4",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                    "text": "I gather you haven't totally recovered from your experience in the catacombs?",
                                                    "emotion": "0",
                                                    "emotion2": "2",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "d0203249-23f1-477f-bd78-c051d31f3022",
                                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "I have nightmares of being helplessly trapped and awaiting death in the dark. I feel like such a coward.",
                                                    "emotion": "2",
                                                    "emotion2": "2",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.showMenu",
                                                    "id": "ee5fb80a-d7f1-4da2-b52a-8d5de25d0ed0",
                                                    "options": [
                                                        {
                                                            "type": "options.text",
                                                            "id": "13afc658-57b2-4dac-805e-ed91389b51be",
                                                            "text": "Say Something Kind to Comfort Joel",
                                                            "nodes": [
                                                                {
                                                                    "type": "nodes.speak",
                                                                    "id": "d2c69ed1-144c-44ba-a605-324aa691d13c",
                                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                    "actorId2": null,
                                                                    "text": "You aren't a coward. You dared to go into the catacombs and explore them even though you knew they were dangerous. You managed to survive for days even though you were injured.",
                                                                    "emotion": "0",
                                                                    "device": "0"
                                                                },
                                                                {
                                                                    "type": "nodes.speak",
                                                                    "id": "aec3ab25-e812-49e7-a995-820454d068fb",
                                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                    "actorId2": null,
                                                                    "text": "You're one of the bravest people I know.",
                                                                    "emotion": "0",
                                                                    "device": "0"
                                                                },
                                                                {
                                                                    "id": "0706c7f3-5669-416b-bd8e-00f2e4985328",
                                                                    "type": "nodes.skillBranch",
                                                                    "skill": "Charm",
                                                                    "target": "80",
                                                                    "success": {
                                                                        "type": "nodes.block",
                                                                        "nodes": [
                                                                            {
                                                                                "type": "nodes.speak",
                                                                                "id": "ac06e1b7-c056-42fe-9432-413fd10452c2",
                                                                                "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                                                "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                                "text": "It's kind of you to say.",
                                                                                "emotion": "0",
                                                                                "emotion2": "0",
                                                                                "device": "0",
                                                                                "device2": "0"
                                                                            },
                                                                            {
                                                                                "type": "nodes.speak",
                                                                                "id": "613bcf46-9d6e-4991-8982-cc3d85bb5505",
                                                                                "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                                "actorId2": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                                                "text": "Not just kind, but true.",
                                                                                "emotion": "0",
                                                                                "emotion2": "1",
                                                                                "device": "0",
                                                                                "device2": "0"
                                                                            },
                                                                            {
                                                                                "type": "nodes.changeReputation",
                                                                                "id": "ee9f43e5-9b44-4fe9-8a28-f2e55143f117",
                                                                                "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                                                "amount": "2",
                                                                                "change": "1",
                                                                                "notify": true
                                                                            }
                                                                        ]
                                                                    },
                                                                    "failure": {
                                                                        "type": "nodes.block",
                                                                        "nodes": [
                                                                            {
                                                                                "type": "nodes.speak",
                                                                                "id": "0997d17b-d5c9-48ca-af62-8f07bdbd3f04",
                                                                                "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                                                "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                                "text": "What does that matter, when I can't sleep two hours without nightmares?",
                                                                                "emotion": "2",
                                                                                "emotion2": "2",
                                                                                "device": "0",
                                                                                "device2": "0"
                                                                            }
                                                                        ]
                                                                    },
                                                                    "notify": true
                                                                }
                                                            ],
                                                            "expression": null,
                                                            "ignoreChildAvailability": false,
                                                            "minutes": "4",
                                                            "ExitMenu": true
                                                        },
                                                        {
                                                            "type": "options.text",
                                                            "id": "32cd7cf5-cc14-4636-b9d6-6ee15be237f8",
                                                            "text": "Say Something Clever to Distract Joel",
                                                            "nodes": [
                                                                {
                                                                    "type": "nodes.speak",
                                                                    "id": "99586210-473d-4e23-9a61-978f920a70bd",
                                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                    "actorId2": null,
                                                                    "text": "Hey, every time you start to think about the catacombs, remind yourself that it was Sosi's fault you were there.",
                                                                    "emotion": "0",
                                                                    "emotion2": "0",
                                                                    "device": "0",
                                                                    "device2": "0"
                                                                },
                                                                {
                                                                    "type": "nodes.speak",
                                                                    "id": "07c7b567-d39d-4442-a2c4-a96bccc1e148",
                                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                    "actorId2": null,
                                                                    "text": "Then think about all the ways you are going to get your revenge upon him instead.",
                                                                    "emotion": "1",
                                                                    "device": "0"
                                                                },
                                                                {
                                                                    "id": "4f727317-3290-4ae0-ac52-0f333ec7a3df",
                                                                    "type": "nodes.skillBranch",
                                                                    "skill": "Smarts",
                                                                    "target": "80",
                                                                    "success": {
                                                                        "type": "nodes.block",
                                                                        "nodes": [
                                                                            {
                                                                                "type": "nodes.changeReputation",
                                                                                "id": "85d01c4a-929d-420e-8a56-a766eafee265",
                                                                                "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                                                "amount": "2",
                                                                                "change": "1",
                                                                                "notify": true
                                                                            },
                                                                            {
                                                                                "type": "nodes.speak",
                                                                                "id": "4a2ac1d6-589b-483a-9fdc-1d45e58a78ef",
                                                                                "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                                                "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                                "text": "Trade nightmares for daydreams? I suppose it is worth a try.",
                                                                                "emotion": "0",
                                                                                "emotion2": "1",
                                                                                "device": "0",
                                                                                "device2": "0"
                                                                            }
                                                                        ]
                                                                    },
                                                                    "failure": {
                                                                        "type": "nodes.block",
                                                                        "nodes": [
                                                                            {
                                                                                "type": "nodes.speak",
                                                                                "id": "bdef275f-9c8d-47ee-964e-d59dba203821",
                                                                                "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                                                "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                                "text": "I just want to forget about all of it.",
                                                                                "emotion": "2",
                                                                                "emotion2": "2",
                                                                                "device": "0",
                                                                                "device2": "0"
                                                                            }
                                                                        ]
                                                                    },
                                                                    "notify": true
                                                                }
                                                            ],
                                                            "expression": null,
                                                            "ignoreChildAvailability": false,
                                                            "minutes": "4",
                                                            "ExitMenu": true
                                                        },
                                                        {
                                                            "type": "options.text",
                                                            "id": "dca5af11-c190-4e35-a1a5-aa90d5b3fca2",
                                                            "text": "Say Something Snarky to Entertain Joel",
                                                            "nodes": [
                                                                {
                                                                    "type": "nodes.speak",
                                                                    "id": "12ff42c6-a60b-4f40-9cf1-edae34b749e0",
                                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                    "actorId2": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                                    "text": "Whenever you feel afraid - don't be ashamed. Fear is just nature's way of letting you know you are doing something dangerously stupid.",
                                                                    "emotion": "1",
                                                                    "emotion2": "0",
                                                                    "device": "0",
                                                                    "device2": "0"
                                                                },
                                                                {
                                                                    "id": "9382371d-ead2-4285-9fc6-661c9161e527",
                                                                    "type": "nodes.skillBranch",
                                                                    "skill": "Moxie",
                                                                    "target": "80",
                                                                    "success": {
                                                                        "type": "nodes.block",
                                                                        "nodes": [
                                                                            {
                                                                                "type": "nodes.changeReputation",
                                                                                "id": "51f820f0-5710-49a8-b807-b7faf84d2ebb",
                                                                                "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                                                "amount": "1",
                                                                                "change": "1",
                                                                                "notify": true
                                                                            },
                                                                            {
                                                                                "type": "nodes.speak",
                                                                                "id": "87c9bf11-7510-43b7-b987-9a5cbb19e11a",
                                                                                "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                                "actorId2": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                                                "text": "Believe me, I should know!",
                                                                                "emotion": "1",
                                                                                "emotion2": "1",
                                                                                "device": "0",
                                                                                "device2": "0"
                                                                            }
                                                                        ]
                                                                    },
                                                                    "failure": {
                                                                        "type": "nodes.block",
                                                                        "nodes": [
                                                                            {
                                                                                "type": "nodes.speak",
                                                                                "id": "8481506b-c613-4f08-ab52-513476c3b73b",
                                                                                "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                                                "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                                "text": "Being a coward <i>and</i> stupid is not comforting.",
                                                                                "emotion": "2",
                                                                                "emotion2": "2",
                                                                                "device": "0",
                                                                                "device2": "0"
                                                                            },
                                                                            {
                                                                                "type": "nodes.changeReputation",
                                                                                "id": "fce81765-486f-48da-85d8-ad83fedbb512",
                                                                                "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                                                "amount": "1",
                                                                                "change": "0",
                                                                                "notify": true
                                                                            }
                                                                        ]
                                                                    },
                                                                    "notify": true
                                                                }
                                                            ],
                                                            "expression": null,
                                                            "ignoreChildAvailability": false,
                                                            "minutes": "2",
                                                            "ExitMenu": true
                                                        },
                                                        {
                                                            "type": "options.text",
                                                            "id": "b0ec7738-3b11-4f51-9e77-fcd1e68a8237",
                                                            "text": "Don't Respond",
                                                            "nodes": [],
                                                            "expression": null,
                                                            "ignoreChildAvailability": false,
                                                            "minutes": 0,
                                                            "ExitMenu": true
                                                        }
                                                    ],
                                                    "AutoAddDone": false,
                                                    "Unique": true
                                                }
                                            ]
                                        },
                                        {
                                            "type": "nodes.branchSection",
                                            "expression": null,
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "5ed6cb40-adcd-4af2-bc27-938e6ecfe6e9",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                    "text": "How does it feel knowing that Sosi can't bully you around?",
                                                    "emotion": "0",
                                                    "emotion2": "4",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "b0a6f580-ae68-4133-96a4-c2f8542d21d1",
                                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "It is actually nice not to have to be Caesari's henchman.",
                                                    "emotion": "1",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": true,
                            "minutes": "3",
                            "ExitMenu": false
                        },
                        {
                            "type": "options.text",
                            "id": "ea7782a7-102b-4522-9e21-ba1c8c0d7f6a",
                            "text": "Ask About Castle Secrets",
                            "nodes": [
                                {
                                    "type": "nodes.changeTags",
                                    "id": "3cfa7090-4568-4ef7-9aee-86d397fbb307",
                                    "scope": "target",
                                    "scopeId": null,
                                    "scopeFilterId": null,
                                    "tagsToAdd": "jiquestion2",
                                    "tagsToRemove": null
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "dfb20227-a69d-471d-93c3-0bde30bcf2ce",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "text": "What's this about secrets in this castle?",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "3c68456a-3797-41fb-803e-99715686eed9",
                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "There's a secret passageway behind the creepy painting in the library. Yet everytime I go near that painting, I feel a chill go up my spine and I don't dare step into the hidden hallway there.",
                                    "emotion": "2",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "db6aaac9-4b3e-49bf-8228-b7ecfbdf166a",
                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "If you dare to brave that passageway, please let me know what you find there. It would be a pity not to know what secrets hide behind the library.",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.addJournalEntry",
                                    "id": "14c64fec-08eb-4d2c-8058-63909cb68cf9",
                                    "name": "Library Secrets",
                                    "notify": true,
                                    "description": "Joel is too creeped out to explore the secret hallway behind the creepy painting in the library. I wonder why?"
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": false,
                            "minutes": "5",
                            "ExitMenu": false
                        },
                        {
                            "type": "options.text",
                            "id": "521bac7e-572f-42af-8dbc-d67ec0ec56fa",
                            "text": "Ask About the Shop",
                            "nodes": [
                                {
                                    "type": "nodes.changeTags",
                                    "id": "cd19dfe6-c1b7-408c-9c65-3a66faf6e918",
                                    "scope": "target",
                                    "scopeId": null,
                                    "scopeFilterId": null,
                                    "tagsToAdd": "jiquestion3",
                                    "tagsToRemove": null
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "999efdaa-fe2f-4831-9e07-139125ae0653",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "text": "Have you got any new items for sale?",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "189bfe4f-2e5c-4040-9bce-1061cc2698ba",
                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "I have just managed to get hold of a very rare and valuable item - a Stealetto. It is a very effective combat weapon. To the right person, this will sell for a lot of money...",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "e6f70546-3e84-47dc-9942-1bfd7768cdcb",
                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "However, because you are my friend, I will make you a very good deal.",
                                    "emotion": "1",
                                    "emotion2": "1",
                                    "device": "0",
                                    "device2": "0"
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": false,
                            "minutes": "4",
                            "ExitMenu": false
                        },
                        {
                            "type": "options.text",
                            "id": "248bd33e-9194-4bae-8521-0e0113ef9e87",
                            "text": "Ask About Rumors",
                            "nodes": [
                                {
                                    "type": "nodes.changeTags",
                                    "id": "de42a384-4673-4abe-81b9-a5df09b46d39",
                                    "scope": "target",
                                    "scopeId": null,
                                    "scopeFilterId": null,
                                    "tagsToAdd": "jiquestion4",
                                    "tagsToRemove": null
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "2bffc806-c7ee-44d6-8496-31a4b949b181",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "text": "What secrets have you learned about the castle?",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "007ddd80-f818-4443-ac39-4dc13a8e865c",
                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "There is reputed to be a dungeon and an 'interrogation room' somewhere near here. I have never managed to open the door near the ladder to the gazebo, but I suspect that it connects to the dungeon.",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": false,
                            "minutes": "3",
                            "ExitMenu": false
                        },
                        {
                            "type": "options.text",
                            "id": "1dda117b-b912-4803-bf1d-4e32d62ec52a",
                            "text": "Say Goodbye",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "9a7a02fe-6dcb-461d-992f-bea4d19f4ea9",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "4b05c425-ca25-4abb-9a36-7d793370842f",
