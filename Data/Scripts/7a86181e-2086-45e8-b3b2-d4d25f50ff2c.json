                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                    "actorId2": null,
                    "text": "Hey - this is a letter from my mama! How did she know I was here?",
                    "emotion": "4",
                    "emotion2": "0",
                    "device": "0",
                    "device2": "0"
                },
