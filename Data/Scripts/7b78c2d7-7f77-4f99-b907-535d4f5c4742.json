                {
                    "type": "nodes.addJournalEntry",
                    "id": "3f40d94c-7ed3-4519-b090-edcb9281576e",
                    "name": "Flame for Me",
                    "notify": true,
                    "description": "We made the Incendia runestone today. This creates a magical flame when something gets near it. Sounds like it could be really useful in certain unpleasant situations..."
                },
                {
                    "type": "nodes.speak",
                    "id": "a07b1ee0-1097-4a3f-bfe8-85ec06a25a7f",
                    "actorId": "59d4db68-0e1f-4cca-8118-eb49edcf3859",
                    "actorId2": null,
                    "text": "Incendia creates magical flames that only damages living or non-living material. You cannot light a torch from the fire, nor can you warm your hands with it.",
                    "emotion": "0",
                    "emotion2": "0",
                    "device": "0",
                    "device2": "0"
                },
                {
                    "type": "nodes.speak",
                    "id": "f30057b4-bb07-4a03-a343-9c38532dff8c",
                    "actorId": "59d4db68-0e1f-4cca-8118-eb49edcf3859",
                    "actorId2": null,
                    "text": "Thus, it can only be used for offensive or defensive purposes...",
                    "emotion": "0",
                    "emotion2": "0",
                    "device": "0",
                    "device2": "0"
                },
