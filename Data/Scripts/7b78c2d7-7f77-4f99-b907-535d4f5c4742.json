                        },
                        {
                            "type": "options.text",
                            "id": "aa8b9969-dbdd-43d0-a434-687f6c10d769",
                            "text": "Make a Joke About Magic Users",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "c655ff73-1034-4f87-8618-f5284e6a0227",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "59d4db68-0e1f-4cca-8118-eb49edcf3859",
                                    "text": "What do Magic Users make for a living?",
                                    "emotion": "1",
                                    "emotion2": "4",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "8dd5a2a8-523b-4b0d-898a-0dd2f59ec916",
                                    "actorId": "59d4db68-0e1f-4cca-8118-eb49edcf3859",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "I would think that answer would depend upon the Magic User...",
                                    "emotion": "0",
                                    "emotion2": "1",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "c7895af7-e8d4-4c99-bae5-048c55406d5b",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "59d4db68-0e1f-4cca-8118-eb49edcf3859",
                                    "text": "A Mage Wage!",
                                    "emotion": "1",
                                    "emotion2": "3",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "e627d94d-0759-4e3d-b19c-8685a4f2bb4b",
                                    "actorId": "59d4db68-0e1f-4cca-8118-eb49edcf3859",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Fortunately, I will not hold your punmanship against you...",
                                    "emotion": "1",
                                    "emotion2": "4",
                                    "device": "0",
                                    "device2": "0"
                                },
