                                    ]
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "a5a81ddd-b7ab-4654-a61f-2e79d74f0f55",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "6b30a3a9-2324-487d-9db9-03ce174e0e80",
                                    "text": "I'll see you later.",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "8b11b57f-5828-499f-bfe6-feb352fc7b70",
                                    "actorId": "6b30a3a9-2324-487d-9db9-03ce174e0e80",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Take care of yourself, Shawn. ",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
