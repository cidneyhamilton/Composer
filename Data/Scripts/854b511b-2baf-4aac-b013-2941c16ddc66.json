    "entryPoints": [
        {
            "type": "scripts.entryPoint",
            "id": "7abde3d7-0832-487e-b055-931175416972",
            "name": "Main",
            "nodes": [
                {
                    "type": "nodes.showMenu",
                    "id": "04f6d708-028b-4bef-aa41-5c4c44e72531",
                    "options": [
                        {
                            "type": "options.text",
                            "id": "75d6555a-b8dd-4ad7-b20b-4ba1953289d0",
                            "text": "Ask About Joel",
                            "nodes": [
                                {
                                    "type": "nodes.branch",
                                    "sections": [
                                        {
                                            "type": "nodes.branchSection",
                                            "expression": {
                                                "type": "expressions.inTags",
                                                "scope": "actor",
                                                "scopeId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                "scopeFilterId": null,
                                                "tags": "RcC02Joel2",
                                                "has": false
                                            },
                                            "nodes": [
                                                {
                                                    "type": "nodes.changeReputation",
                                                    "id": "a4e29e81-51bc-4427-8653-30b3f62ec729",
                                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                    "amount": "1",
                                                    "change": "1",
                                                    "notify": true
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "6c7f932f-765d-4bc7-95e2-b76011b4f9a8",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                    "text": "How are things going with you today?",
                                                    "emotion": "1",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "fb554433-3379-45b2-94fd-4b7ea1823b0a",
                                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "Very well, thank you. Master von Urwald's lecture on tools was most edifying, was it not? If you have need of equipment for the class, please keep in mind that I will be happy to provide you with the finest of tools.",
                                                    "emotion": "1",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "db2ad461-92f3-496c-8f64-ee4950c04515",
                                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "For a very modest fee, of course.",
                                                    "emotion": "0",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.changeTags",
                                                    "id": "4a3d02b8-dc29-48d7-a3ca-fac805cb0c7e",
                                                    "scope": "actor",
                                                    "scopeId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                    "scopeFilterId": "3256b6d8-50b9-4764-b016-01ea538ea55f",
                                                    "tagsToAdd": "RcC02Joel2",
                                                    "tagsToRemove": null
                                                }
                                            ]
                                        },
                                        {
                                            "type": "nodes.branchSection",
                                            "expression": null,
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "94018f7c-a50b-4987-8f5b-0e951d2a6bc2",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                    "text": "How's it going?",
                                                    "emotion": "0",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "67f71b38-d65c-4dc0-b383-03e05bd5b674",
                                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "It is good of you to ask. I am, of course, happy to be of service to you.",
                                                    "emotion": "1",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": true,
                            "minutes": "5",
                            "ExitMenu": false
                        },
                        {
                            "type": "options.text",
                            "id": "33cf6716-beed-4ef1-ac88-ccd6bd60efdd",
                            "text": "Ask About Tools",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "a516a94d-6f01-4bc0-af0e-db934cfd8343",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "text": "What do you mean by tools?",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "cf16f94f-d0bb-4d8e-8937-8897ae79e9fe",
                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Ah, in addition to my selection of basic tools of the trade, I have added a useful means of defusing a potentially dangerous situation - Flash Powder.",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "cddd4c4b-2d75-4010-b2cd-98f63622a1a3",
                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Should you find yourself confronted by a hostile creature or creatures, you have but to throw the bag of powder down. All of your opponents will be temporarily blinded and you can seek safety.",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "91adfba8-032f-45b8-bd18-8ea1176b3ff5",
                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Of course, if you prefer, the Flash Powder will give you an opportunity to apply alternative tactics rather than merely avoid the situation.",
                                    "emotion": "1",
                                    "emotion2": "1",
                                    "device": "0",
                                    "device2": "0"
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": false,
                            "minutes": 0,
                            "ExitMenu": false
                        },
                        {
                            "type": "options.text",
                            "id": "3ccf88e5-9fee-4d5e-8c25-228f6f852620",
                            "text": "Ask About Information",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "bf8a1c0b-0517-4d97-82b6-88db14794b4a",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "text": "What sort of information are you talking about?",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "9adbfde7-89af-421c-aef1-ffd42a970d92",
                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "I like to think of myself as a procurer of useful information. I would be quite happy to share a few choice rumors with you.",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "67b6cc7c-e12a-4c9b-bf3c-29a866b0c89d",
                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "For instance, do you recall Mr. Terk, who seemed to take such an interest in your future when he introduced you to the class? He makes a personal point of enforcing the 10 PM curfew.",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "c0ef16dc-c79b-4761-81bf-375fd6d24451",
                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "He regularly patrols the Great Hall and the Mezzanine after hours. If he sees a student, Mr. Terk gives them 10 demerits and escorts them to their dorm room.",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "e13edd68-c894-4eba-ad6a-5de88cc55cc0",
                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "It is best to avoid Mr. Terk whenever possible. If a student accumulates more than 100 demerits, that student is expelled from the school.",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "fdbe9f5f-0a08-4694-8be9-e068a6222156",
                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "I do not think that Mr. Terk likes you very much.",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "7658efbe-5008-4d37-8ba4-44f0f95a9e11",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "text": "Is that ever an understatement!",
                                    "emotion": "1",
                                    "emotion2": "1",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.addJournalEntry",
                                    "id": "1d20280e-4b3b-420c-ab88-a2ee8c2a1823",
                                    "name": "Terk Patrols",
                                    "notify": true,
                                    "description": "Kyro says that Terk patrols the Great Hall and the Mezzanine and gives out demerits. Now if I only knew where those places are to avoid them!"
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": false,
                            "minutes": "10",
                            "ExitMenu": false
                        },
                        {
                            "type": "options.text",
                            "id": "cc3ee7a9-9778-4502-9fdc-6169d9721e7a",
                            "text": "Say Goodbye",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "663440f6-f98e-49a0-b072-27ca09bd1ecb",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "text": "See you later.",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "b84bbd26-d12e-4b86-beff-90401162adc2",
                                    "actorId": "4b05c425-ca25-4abb-9a36-7d793370842f",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "It will be a pleasure.",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": true,
                            "minutes": "2",
                            "ExitMenu": true
                        }
                    ],
                    "AutoAddDone": false,
                    "Unique": false
                }
            ]
        }
    ]
