                        },
                        {
                            "type": "options.text",
                            "id": "11dd9085-a702-494a-935c-9782970fd90c",
                            "text": "Say Goodnight",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "e50715b0-125a-4b76-9ac9-1362d62f7dad",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "0661a2f7-5493-46d9-ab58-6e9bff9a5f30",
                                    "text": "Try to get some sleep tonight.",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "c91c5948-b193-4eaf-8945-3226819056b4",
                                    "actorId": "0661a2f7-5493-46d9-ab58-6e9bff9a5f30",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "If I do, it will be because I'm nodding over my books.",
                                    "emotion": "2",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": true,
