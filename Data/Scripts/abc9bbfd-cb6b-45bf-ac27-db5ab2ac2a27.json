                                    "actorId": "bdddd1b1-bbf3-4dd5-bbd6-0ef3115d8b66",
                                    "actorId2": "84d47ff5-c737-42b6-9e21-e8b7413ce007",
                                    "text": "(whispered) <i>Sorry, Sir.</i>",
                                    "emotion": "2",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.turnActor",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "propId": null,
