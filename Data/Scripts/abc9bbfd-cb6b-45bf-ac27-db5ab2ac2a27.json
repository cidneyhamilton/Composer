                                                        "type": "nodes.block",
                                                        "nodes": [
                                                            {
                                                                "type": "nodes.changeReputation",
                                                                "id": "4fb5bf41-a20b-4633-b985-d92053d7764b",
                                                                "actorId": "bdddd1b1-bbf3-4dd5-bbd6-0ef3115d8b66",
                                                                "amount": "2",
                                                                "change": "1",
                                                                "notify": true
                                                            }
                                                        ]
                                                    },
