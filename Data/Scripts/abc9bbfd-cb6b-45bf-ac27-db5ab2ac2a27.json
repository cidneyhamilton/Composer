                                                    },
                                                    "failure": {
                                                        "type": "nodes.block",
                                                        "nodes": [
                                                            {
                                                                "type": "nodes.changeReputation",
                                                                "id": "3319ca49-c782-49bc-b4e9-2403e093e9ac",
                                                                "actorId": "bdddd1b1-bbf3-4dd5-bbd6-0ef3115d8b66",
                                                                "amount": "1",
                                                                "change": "0",
                                                                "notify": true
                                                            }
