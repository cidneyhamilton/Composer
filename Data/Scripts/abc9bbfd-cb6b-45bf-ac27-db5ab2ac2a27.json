                                },
                                {
                                    "type": "nodes.setCameraTarget",
                                    "propId": null,
                                    "actorId": "84d47ff5-c737-42b6-9e21-e8b7413ce007",
                                    "time": "1",
                                    "translateX": "-0.79",
                                    "translateY": "0.21",
                                    "translateZ": "0.86",
