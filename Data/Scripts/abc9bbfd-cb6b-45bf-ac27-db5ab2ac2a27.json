                                    ]
                                },
                                {
                                    "type": "nodes.showMenu",
                                    "id": "551a874c-cbe9-469f-aaf4-5a08cf6803ab",
                                    "options": [
                                        {
                                            "type": "options.text",
                                            "id": "dcf07a0e-a031-4264-b4df-7014deecb124",
                                            "text": "Say Something Polite to Encourage Thomas",
                                            "nodes": [
                                                {
                                                    "id": "5d5606cc-d376-4246-b678-bc89ed98f166",
                                                    "type": "nodes.skillBranch",
