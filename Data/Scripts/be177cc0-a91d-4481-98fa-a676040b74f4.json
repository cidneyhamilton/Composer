                    "options": [
                        {
                            "type": "options.text",
                            "id": "a1edce19-e0de-4048-abcd-a4b5353705e4",
                            "text": "Greet Aeolus",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "56774fda-46eb-4bbb-8ef5-1ea709b480b7",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "0661a2f7-5493-46d9-ab58-6e9bff9a5f30",
                                    "text": "How's it going?",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "121a91b1-b141-45ee-a931-6a96f878e936",
                                    "actorId": "0661a2f7-5493-46d9-ab58-6e9bff9a5f30",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "I'm working on a song for my vocal performance class -",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "cea80ec0-8027-4d1e-a245-11cbf6af8f26",
                                    "actorId": "0661a2f7-5493-46d9-ab58-6e9bff9a5f30",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "\"Play us a tune, you're the panpipe guy. Play us a tune this day. Because we're all very fond of your panpipe song, and your music just blows us away.\"",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "7c218076-89ce-4688-8d5a-308e38c41886",
                                    "actorId": "0661a2f7-5493-46d9-ab58-6e9bff9a5f30",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "What do you think?",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.showMenu",
                                    "id": "14edc42f-d41b-47b6-b9ce-a78f69708d5d",
                                    "options": [
                                        {
                                            "type": "options.text",
                                            "id": "f2d4d51c-3281-4e21-929c-bf8d32e258a6",
                                            "text": "Answer Politely",
                                            "nodes": [
                                                {
                                                    "id": "2462fb45-05c5-4be0-ba6c-02eeb6d895f1",
                                                    "type": "nodes.skillBranch",
                                                    "skill": "Charm",
                                                    "target": "15",
                                                    "success": {
                                                        "type": "nodes.block",
                                                        "nodes": [
                                                            {
                                                                "type": "nodes.changeReputation",
                                                                "id": "e53bea08-7ee1-4a89-ac2f-155e222c99e4",
                                                                "actorId": "0661a2f7-5493-46d9-ab58-6e9bff9a5f30",
                                                                "amount": "1",
                                                                "change": "1",
                                                                "notify": true
                                                            }
                                                        ]
                                                    },
                                                    "failure": {
                                                        "type": "nodes.block",
                                                        "nodes": []
                                                    },
                                                    "notify": true
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "64abeb5d-ae90-4d4a-8ab5-af9a4a596756",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "0661a2f7-5493-46d9-ab58-6e9bff9a5f30",
                                                    "text": "It's... amusing.",
                                                    "emotion": "0",
                                                    "emotion2": "1",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "51044070-8fec-435c-ab90-bf399a984baa",
                                                    "actorId": "0661a2f7-5493-46d9-ab58-6e9bff9a5f30",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "Thanks! Now I have to work on the verses.",
                                                    "emotion": "1",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                }
                                            ],
                                            "expression": null,
                                            "ignoreChildAvailability": false,
                                            "minutes": "1",
                                            "ExitMenu": true
                                        },
                                        {
                                            "type": "options.text",
                                            "id": "b6fb9407-fa8b-45ea-a9e1-10a2bdd92faf",
                                            "text": "Answer Evasively",
                                            "nodes": [
                                                {
                                                    "id": "18393ad6-e9e6-4a36-a798-a94d7ec52212",
                                                    "type": "nodes.skillBranch",
                                                    "skill": "Smarts",
                                                    "target": "15",
                                                    "success": {
                                                        "type": "nodes.block",
                                                        "nodes": [
                                                            {
                                                                "type": "nodes.changeReputation",
                                                                "id": "6aeafb03-d91d-4988-89d1-831c4c60ec91",
                                                                "actorId": "0661a2f7-5493-46d9-ab58-6e9bff9a5f30",
                                                                "amount": "1",
                                                                "change": "1",
                                                                "notify": true
                                                            }
                                                        ]
                                                    },
                                                    "failure": {
                                                        "type": "nodes.block",
                                                        "nodes": []
                                                    },
                                                    "notify": true
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "dfab0375-f92f-403c-a21d-be5530756610",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "0661a2f7-5493-46d9-ab58-6e9bff9a5f30",
                                                    "text": "I'm pretty sure that no one else would ever write such a song but you.",
                                                    "emotion": "0",
                                                    "emotion2": "1",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "6f844149-6c28-454f-bcd0-bad995174dda",
                                                    "actorId": "0661a2f7-5493-46d9-ab58-6e9bff9a5f30",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "Yes, it will be my signature song.",
                                                    "emotion": "1",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                }
                                            ],
                                            "expression": null,
                                            "ignoreChildAvailability": false,
                                            "minutes": "1",
                                            "ExitMenu": true
                                        },
                                        {
                                            "type": "options.text",
                                            "id": "ed2e7570-3586-4e9b-910d-a421489711ad",
                                            "text": "Answer Snarkily",
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "090837ac-e79a-42c2-ad53-2f6d16bfd77f",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "0661a2f7-5493-46d9-ab58-6e9bff9a5f30",
                                                    "text": "As songs go, that's certainly one that should go far... Hopefully far enough so I won't hear it again.",
                                                    "emotion": "0",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "a3705b8b-de03-4b21-a712-0e196cff5e2d",
                                                    "actorId": "0661a2f7-5493-46d9-ab58-6e9bff9a5f30",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "<sigh> I guess I'll have to start over then.",
                                                    "emotion": "2",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
