                                        },
                                        {
                                            "type": "options.text",
                                            "id": "8104b4b4-1f1c-4857-8b41-de11d80f6683",
                                            "text": "Be Firm",
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "247a1734-107d-49ed-a8a0-ce6cde14ab65",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "0661a2f7-5493-46d9-ab58-6e9bff9a5f30",
                                                    "text": "You should clean up your junk off the floor. This is my room too, now.",
