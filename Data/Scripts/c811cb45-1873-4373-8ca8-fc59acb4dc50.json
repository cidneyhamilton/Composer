                                                "operator": "gte",
                                                "compareTo": "21",
                                                "sceneId": "84006d08-8e6d-4558-b9b5-101f3c3054fe",
                                                "propId": null
                                            },
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "fedbf280-118b-4c59-a416-c949574edcfc",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": null,
                                                    "text": "It's too late to concentrate on a book in the Rec Room tonight. I don't want Terk to catch me napping over it.",
                                                    "emotion": "5",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                }
                                            ]
                                        },
