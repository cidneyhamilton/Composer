                                                                    "id": "4d9854d0-8756-45ef-807b-b5788161f1cb",
                                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                    "actorId2": null,
                                                                    "text": "Wow. Who knew that a simple game could be so complex?",
                                                                    "emotion": "0",
                                                                    "emotion2": "0",
                                                                    "device": "0",
                                                                    "device2": "0"
                                                                },
                                                                {
                                                                    "type": "nodes.quests",
                                                                    "id": "af48767f-2878-4b1c-864f-8f212f57f8e1",
                                                                    "sceneId": "e8520824-d970-4c6e-8aec-6c308c8846ab",
                                                                    "propId": "0adb04b7-1916-4a86-ab45-790358de7d7d",
                                                                    "target": "1",
                                                                    "notify": true
                                                                }
                                                            ]
                                                        },
