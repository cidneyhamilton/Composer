                                                    "compareTo": "19",
                                                    "sceneId": "84006d08-8e6d-4558-b9b5-101f3c3054fe",
                                                    "propId": null
                                                }
                                            },
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "38a54877-3bc1-47b1-8c1c-cba64bc77316",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": null,
                                                    "text": "I don't have time to study this before supper time. It's hard to concentrate on anything when you are hungry.",
                                                    "emotion": "0",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                }
                                            ]
