                                                                {
                                                                    "id": "d9666b86-ec52-4e3a-8b0c-fb7377c6d7cd",
                                                                    "type": "nodes.improveSkill",
                                                                    "skill": "Gaming",
                                                                    "amount": "5",
                                                                    "notify": true
                                                                },
                                                                {
                                                                    "type": "nodes.incrementTime",
                                                                    "id": "7e17a65f-437e-4da4-8fdf-989d442bfc87",
                                                                    "days": 0,
                                                                    "hours": "1",
                                                                    "minutes": 0
                                                                },
                                                                {
                                                                    "type": "nodes.speak",
                                                                    "id": "d826cd4c-dcec-41c3-80e8-b97b678cd8fb",
                                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                    "actorId2": null,
                                                                    "text": "Best hand... okay, Grand Poobah beats everything, Poobah is next best, then Fizbin, Mimi, and Meh. Wump is the worst. Staying in on weak hands is just a way to lose Lyra. If I'm behind at the beginning, odds are I'll still be behind at showdown.",
                                                                    "emotion": "0",
                                                                    "emotion2": "0",
                                                                    "device": "0",
                                                                    "device2": "0"
                                                                },
                                                                {
                                                                    "type": "nodes.playSoundEffect",
                                                                    "soundEffectName": "book_close.wav",
                                                                    "wait": true
                                                                },
                                                                {
                                                                    "type": "nodes.fade",
                                                                    "scope": "FadeIn",
                                                                    "fadeTime": "1",
                                                                    "fadeTime2": "1",
                                                                    "wait": true,
                                                                    "fadeDown": "0.5",
                                                                    "fadeColorR": 0,
                                                                    "fadeColorG": 0,
                                                                    "fadeColorB": 0
                                                                },
