                                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                                    "actorId2": null,
                                                                    "text": "Wonder what else I can learnfrom this book?",
                                                                    "emotion": "0",
                                                                    "emotion2": "0",
