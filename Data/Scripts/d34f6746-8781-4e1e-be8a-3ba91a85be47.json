                    "options": [
                        {
                            "type": "options.text",
                            "id": "63108677-e35e-4c70-8698-da3e0dfd87a1",
                            "text": "Examine the Glow For It Runestone",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "45bfdbae-9d26-44b6-ba10-13c26a7aca6d",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": null,
                                    "text": "I crafted this stone to cast the Glow spell, which acts sort of like a magical lantern. It's a very cool runestone. I love the purple glow.",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "97c12e28-5a5e-4dfd-a5bc-f3ad65d40377",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": null,
                                    "text": "The coolest thing about it is that, once I cast the Glow spell, I'm the only one who can see the light it gives off. ",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "4e125f89-9394-411b-9c06-5d941fb2e373",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": null,
                                    "text": "Advantage: Shawn!",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": true,
                            "minutes": 0,
                            "ExitMenu": false
                        },
                        {
                            "type": "options.text",
                            "id": "ae40b2a7-da34-4ebb-8d59-e838e407517c",
                            "text": "Use the Glow For It Runestone",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "8329c857-752b-4a35-aca4-0a269f01f96e",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": null,
                                    "text": "Not only does the light of the Glow stone let me see in the dark, I can see details better.",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.useItem",
