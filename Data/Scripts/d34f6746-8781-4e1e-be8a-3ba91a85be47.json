                                    "sceneId": "a2508b7e-a177-4a96-93bd-4d8ab88dffc4",
                                    "propId": "7ef8bf45-b578-4ccf-b111-4cd7318e42a9"
                                }
                            ],
                            "expression": null,
                            "ignoreChildAvailability": true,
                            "minutes": 0,
                            "ExitMenu": false
                        },
                        {
                            "type": "options.text",
                            "id": "957b6440-5623-4192-883d-8a73f30c9d36",
                            "text": "Break the Glow For It Runestone",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "8c206507-e247-47ea-bdbc-84ee7f2f80e2",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": null,
                                    "text": "If I broke this, it'd be useless. And I'd really miss having it.",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "12510d20-bc3c-483d-9874-0ce67b584cae",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": null,
                                    "text": "Although it <i>is</i> true that absence makes the heart glow fonder. ",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                }
                            ],
