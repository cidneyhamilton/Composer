{
    "type": "script",
    "id": "daf00ac7-20ec-49f1-bb34-d15ac388ae23",
    "name": "Gerhard Gifts",
    "sceneId": "eceae806-6f55-4cde-b517-c73b1c924fd9",
    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
    "trigger": {
        "type": "triggers.manual",
        "name": "Manual"
    },
    "entryPoints": [
        {
            "type": "scripts.entryPoint",
            "id": "f55f240f-adcb-4a86-8c17-b57ac9d7bfb7",
            "name": "Main",
            "nodes": [
                {
                    "type": "nodes.showMenu",
                    "id": "00bbea3a-d7da-496b-984f-834bdb667376",
                    "options": [
                        {
                            "type": "options.text",
                            "id": "e23ab912-4273-443c-a0a4-53a070898ecb",
                            "text": "Offer an Apple",
                            "nodes": [
                                {
                                    "type": "nodes.changeTags",
                                    "id": "9b7b0aa5-5de8-42b6-bd6f-d97d3481f39b",
                                    "scope": "actor",
                                    "scopeId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                    "scopeFilterId": null,
                                    "tagsToAdd": "HasOfferedApple",
                                    "tagsToRemove": null
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "3770dca5-4987-4f57-817d-39849b0c061d",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                    "text": "Would you like an apple? ",
                                    "emotion": "1",
                                    "emotion2": "4",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "6a6f940c-e0bc-4f21-88a9-bcf808560819",
                                    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Why do you think that I would want an apple?",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.showMenu",
                                    "id": "7666a952-e6d3-4903-8944-e4d53722288e",
                                    "options": [
                                        {
                                            "type": "options.text",
                                            "id": "b9da47ed-e506-49d3-8b36-d3862e442d3a",
                                            "text": "Say Something Polite",
                                            "nodes": [
                                                {
                                                    "id": "f8df010a-d205-4a47-b206-42718dbcb9be",
                                                    "type": "nodes.skillBranch",
                                                    "skill": "Charm",
                                                    "target": "30",
                                                    "success": {
                                                        "type": "nodes.block",
                                                        "nodes": [
                                                            {
                                                                "type": "nodes.changeReputation",
                                                                "id": "50f28964-a799-4f5f-8ff4-a986a997abc4",
                                                                "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                                "amount": "1",
                                                                "change": "1",
                                                                "notify": true
                                                            }
                                                        ]
                                                    },
                                                    "failure": {
                                                        "type": "nodes.block",
                                                        "nodes": []
                                                    },
                                                    "notify": true
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "72b57897-9db4-4eeb-adad-f26de0ee2ea8",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "text": "<shrug> No real reason, but I thought an apple was a traditional gift to offer to a teacher to show appreciation for the good job you are doing here.",
                                                    "emotion": "1",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "cd3adc15-1b28-4d65-88a5-817129d615e8",
                                                    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "While it is wise to properly bribe a person of authority, you need to be subtle in the giving and judge the gift well. Too minor a gift and you risk insulting the receiver. Too grand a gift arouses suspicion.",
                                                    "emotion": "0",
                                                    "emotion2": "4",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "04d3c2d7-7c02-4222-bd3a-c0a0b57aa4ad",
                                                    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "An apple is the sort of gift a schoolboy gives his tutor. I expect better of you.",
                                                    "emotion": "0",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                }
                                            ],
                                            "expression": null,
                                            "ignoreChildAvailability": false,
                                            "minutes": "6",
                                            "ExitMenu": true
                                        },
                                        {
                                            "type": "options.text",
                                            "id": "ff2b9244-2917-49c4-91de-f332f831bddf",
                                            "text": "Say Something Clever",
                                            "nodes": [
                                                {
                                                    "id": "6c544ca5-09e4-42ef-aeb2-cc158e2ccb40",
                                                    "type": "nodes.skillBranch",
                                                    "skill": "Smarts",
                                                    "target": "30",
                                                    "success": {
                                                        "type": "nodes.block",
                                                        "nodes": [
                                                            {
                                                                "type": "nodes.changeReputation",
                                                                "id": "bb9df4eb-78a8-42cc-ac00-d43491b2859d",
                                                                "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                                "amount": "1",
                                                                "change": "1",
                                                                "notify": true
                                                            }
                                                        ]
                                                    },
                                                    "failure": {
                                                        "type": "nodes.block",
                                                        "nodes": []
                                                    },
                                                    "notify": true
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "8cc24729-113e-4340-8fb6-13ca4b507380",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "text": "I figured that giving gifts to a teacher is a Roguish thing to do to curry favor.",
                                                    "emotion": "1",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "4c091be5-af0e-4168-a217-54097b1d722e",
                                                    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "You may be able to curry a horse with an apple, but you cannot win my favor with one. ",
                                                    "emotion": "0",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                }
                                            ],
                                            "expression": null,
                                            "ignoreChildAvailability": false,
                                            "minutes": "3",
                                            "ExitMenu": true
                                        },
                                        {
                                            "type": "options.text",
                                            "id": "5bed8402-470e-45a2-9543-5a621365147e",
                                            "text": "Say Something Snarky",
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "bf303efb-a3d3-4314-a602-8ec8f0ad21c5",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "text": "You mean you aren't suitably flattered that I went out of my way to give you a gift? After all, the saying goes \"Don't look a gift horse in the mouth.\"",
                                                    "emotion": "1",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "id": "9c8e1a2b-5d90-4844-a8bc-580b77b51824",
                                                    "type": "nodes.skillBranch",
                                                    "skill": "Moxie",
                                                    "target": "30",
                                                    "success": {
                                                        "type": "nodes.block",
                                                        "nodes": []
                                                    },
                                                    "failure": {
                                                        "type": "nodes.block",
                                                        "nodes": []
                                                    },
                                                    "notify": true
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "cb9ccdbc-8b1e-4eb5-93b3-42cf9230fd5c",
                                                    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "\"One judges the Giver by the Gift.\" If pinching an apple from the Dining Hall is the best measure of your Rogue skills, then perhaps you need to practice your skills.",
                                                    "emotion": "0",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                }
                                            ],
                                            "expression": null,
                                            "ignoreChildAvailability": false,
                                            "minutes": "4",
                                            "ExitMenu": true
                                        }
                                    ],
                                    "AutoAddDone": false,
                                    "Unique": true
                                }
                            ],
                            "expression": {
                                "type": "expressions.and",
                                "left": {
                                    "type": "expressions.inInventory",
                                    "propId": "101bea4d-a217-47ee-b808-8c24df1454e8",
                                    "sceneId": "a2508b7e-a177-4a96-93bd-4d8ab88dffc4",
                                    "has": true
                                },
                                "right": {
                                    "type": "expressions.inTags",
                                    "scope": "actor",
                                    "scopeId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                    "scopeFilterId": null,
                                    "tags": "HasOfferedApple",
                                    "has": false
                                }
                            },
                            "ignoreChildAvailability": false,
                            "minutes": "3",
                            "ExitMenu": true
                        },
                        {
                            "type": "options.text",
                            "id": "0d04d5e9-f946-44dd-aa14-3be499f1208f",
                            "text": "Offer the Dryad's Kiss Wine",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "ec91728e-ce02-453a-8ea1-aeac9135a6f7",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                    "text": "I found this rare vintage wine in my explorations, sir, and I immediately thought of you. I figured that you would appreciate it more than most. ",
                                    "emotion": "1",
                                    "emotion2": "4",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "a8548960-f000-4456-bb05-1b21cb606053",
                                    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "A flattering speech and a valuable gift - you will make a good Rogue or politician. ",
                                    "emotion": "1",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "faf828d6-cce6-4eca-b963-9e61e01872a2",
                                    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Danke schoen.",
                                    "emotion": "1",
                                    "emotion2": "1",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.changeInventory",
                                    "id": "8629a1ae-ef18-4b91-9b3e-da114c38d146",
                                    "propId": "a6bcab19-4d98-46ab-8fe6-52a4d3761dd4",
                                    "sceneId": "a2508b7e-a177-4a96-93bd-4d8ab88dffc4",
                                    "change": "0",
                                    "count": 1,
                                    "notify": true
                                },
                                {
                                    "type": "nodes.changeReputation",
                                    "id": "fa3bf931-faf0-4f36-9713-688083f57384",
                                    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                    "amount": "15",
                                    "change": "1",
                                    "notify": true
                                }
                            ],
                            "expression": {
                                "type": "expressions.inInventory",
                                "propId": "a6bcab19-4d98-46ab-8fe6-52a4d3761dd4",
                                "sceneId": "a2508b7e-a177-4a96-93bd-4d8ab88dffc4",
                                "has": true
