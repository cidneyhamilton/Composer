                        },
                        {
                            "type": "options.text",
                            "id": "f196b923-24f4-4e90-a267-fe5a9d73c1b4",
                            "text": "Offer the Fine Wine",
                            "nodes": [
                                {
                                    "type": "nodes.branch",
                                    "sections": [
                                        {
                                            "type": "nodes.branchSection",
                                            "expression": {
                                                "type": "expressions.inTags",
                                                "scope": "actor",
                                                "scopeId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                "scopeFilterId": null,
                                                "tags": "HasOfferedFineWine",
                                                "has": false
                                            },
                                            "nodes": [
                                                {
                                                    "type": "nodes.changeTags",
                                                    "id": "86abd067-089e-4146-83be-178b67d55cf8",
                                                    "scope": "actor",
                                                    "scopeId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "scopeFilterId": null,
                                                    "tagsToAdd": "HasOfferedFineWine",
                                                    "tagsToRemove": null
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "be9f2182-ac67-4645-8b90-54edfec2a068",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "text": "I found some very nice wine abandoned in the dangerous section of the wine cellar and I thought you might like it, sir.",
                                                    "emotion": "1",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "2dc627fd-cdbc-4b7c-b0dd-d2b7d3b47b79",
                                                    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "Very good - this wine is an appropriate gift offering for an authority figure and you manage with the offer to subtly emphasize the risk you took to acquire it.",
                                                    "emotion": "0",
                                                    "emotion2": "4",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "4291e07b-b503-4f06-848b-b817358a1789",
                                                    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "Danke.",
                                                    "emotion": "0",
                                                    "emotion2": "1",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.changeInventory",
                                                    "id": "56bbfcc6-79ee-4f51-b163-7806959e1495",
                                                    "propId": "1079772f-9fbf-4dad-b7a4-acea22601a60",
                                                    "sceneId": "a2508b7e-a177-4a96-93bd-4d8ab88dffc4",
                                                    "change": "0",
                                                    "count": 1,
                                                    "notify": true
                                                },
                                                {
                                                    "type": "nodes.changeReputation",
                                                    "id": "74c9c6e8-6244-46ca-b1a1-59c3e2dc670d",
                                                    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "amount": "5",
                                                    "change": "1",
                                                    "notify": true
                                                }
                                            ]
                                        },
                                        {
                                            "type": "nodes.branchSection",
                                            "expression": null,
                                            "nodes": [
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "f4e8a703-3044-48c0-83d8-458027b71c80",
                                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "actorId2": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "text": "Would you like another bottle of the wine I liberated from the wine cellar, sir?",
                                                    "emotion": "0",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.speak",
                                                    "id": "4c749603-be14-48e2-b98c-6a53433852e8",
                                                    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "Yes, thank you.",
                                                    "emotion": "1",
                                                    "emotion2": "1",
                                                    "device": "0",
                                                    "device2": "0"
                                                },
                                                {
                                                    "type": "nodes.changeInventory",
                                                    "id": "421c471a-61af-4093-aed0-500c365366fb",
                                                    "propId": "1079772f-9fbf-4dad-b7a4-acea22601a60",
                                                    "sceneId": "a2508b7e-a177-4a96-93bd-4d8ab88dffc4",
                                                    "change": "0",
                                                    "count": 1,
                                                    "notify": true
                                                },
                                                {
                                                    "type": "nodes.changeReputation",
                                                    "id": "f7735d3b-488e-4ed9-b5a6-224a485bf9ce",
                                                    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                                    "amount": "2",
                                                    "change": "1",
                                                    "notify": true
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ],
                            "expression": {
                                "type": "expressions.inInventory",
                                "propId": "1079772f-9fbf-4dad-b7a4-acea22601a60",
                                "sceneId": "a2508b7e-a177-4a96-93bd-4d8ab88dffc4",
                                "has": true
                            },
                            "ignoreChildAvailability": false,
                            "minutes": "4",
                            "ExitMenu": true
                        },
                        {
                            "type": "options.text",
                            "id": "f649cae8-eb5c-4c39-b575-39232caa9c6c",
                            "text": "Offer the Golden Wine",
                            "nodes": [
                                {
                                    "type": "nodes.speak",
                                    "id": "9dacf78d-59cf-4bbf-a925-9f89e595a6e7",
                                    "actorId": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "actorId2": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                    "text": "Sir, I came across this rare vintage wine and I figure you are a connoisseur of fine things. Would you like to have it as a gift?",
                                    "emotion": "0",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.speak",
                                    "id": "9beaf498-2c4f-4569-952b-aec98a33ab17",
                                    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                    "text": "Well done - nice use of flattery mixed with bribery. I accept your gift with pleasure. Danke.",
                                    "emotion": "1",
                                    "emotion2": "1",
                                    "device": "0",
                                    "device2": "0"
                                },
                                {
                                    "type": "nodes.changeInventory",
                                    "id": "5b8cb8fb-2509-462f-a326-2a5d4db4e416",
                                    "propId": "91aa49b0-490a-4448-967d-d97387a985bb",
                                    "sceneId": "a2508b7e-a177-4a96-93bd-4d8ab88dffc4",
                                    "change": "0",
                                    "count": 1,
                                    "notify": true
                                },
                                {
                                    "type": "nodes.changeReputation",
                                    "id": "f000fdd8-a48f-45d7-8bdb-1640ba504b17",
                                    "actorId": "b7cbd02d-8e2f-4a8d-99a7-02b132d86e1d",
                                    "amount": "10",
                                    "change": "1",
                                    "notify": true
                                }
                            ],
                            "expression": {
                                "type": "expressions.inInventory",
                                "propId": "91aa49b0-490a-4448-967d-d97387a985bb",
                                "sceneId": "a2508b7e-a177-4a96-93bd-4d8ab88dffc4",
                                "has": true
