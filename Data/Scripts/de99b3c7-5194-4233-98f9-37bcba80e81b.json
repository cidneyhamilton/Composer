                                                    "actorId": "181c3be5-dbac-4851-b14e-f23ddb09b98d",
                                                    "actorId2": "30ee2636-15e3-452e-a2db-09cbb9012970",
                                                    "text": "Alas! Had I but given my dearest Emily a rose! Now I must rue my loneliness for all eternity.",
                                                    "emotion": "0",
                                                    "emotion2": "0",
                                                    "device": "0",
                                                    "device2": "0",
                                                    "notes": ""
                                                },
