                                    "actorId": "bdddd1b1-bbf3-4dd5-bbd6-0ef3115d8b66",
                                    "actorId2": null,
                                    "text": "I hope you don't mind, sir. I'm sorry to disturb you like this, but... I just really need to talk to you.",
                                    "emotion": "2",
                                    "emotion2": "0",
                                    "device": "0",
                                    "device2": "0"
