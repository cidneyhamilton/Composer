                                    "options": [
                                        {
                                            "type": "options.text",
                                            "id": "fa23d0f6-85c8-4d92-b5e2-6e92b5f7808b",
                                            "text": "Give a Polite reply",
                                            "nodes": [
                                                {
                                                    "id": "4f6b782e-325f-4d3e-8e75-dd66189faf55",
                                                    "type": "nodes.skillBranch",
                                                    "skill": "Charm",
                                                    "target": "20",
                                                    "success": {
                                                        "type": "nodes.block",
                                                        "nodes": []
                                                    },
                                                    "failure": {
                                                        "type": "nodes.block",
                                                        "nodes": []
